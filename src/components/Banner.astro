---
import type { ImageMetadata } from 'astro';
import defaultBannerImage from "@/src/assets/images/Mask Group 12.png";

interface Props {
  image?: ImageMetadata;
}

const { image } = Astro.props;
---
<div class="banner-container">
  <img 
    src={image?.src ?? defaultBannerImage.src} 
    alt="Banner Image" 
    class="banner-image"
  />
  <div class="banner-text-container">
    <div class="banner-text">
      <h1>
        <slot/>
      </h1>
    </div>
  </div>
</div>

<style>
  .banner-container {
    position: relative;
    max-height: 10rem;
    min-height: 4rem;
    width: 100%;
    overflow: hidden;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    min-height: 4rem;
    object-fit: cover;
    object-position: center center;
  }

  .banner-text-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
  }

  .banner-text {
    width: 100%;
    max-width: 1320px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .banner-text h1 {
    font-size: 3rem;
    color: white;
    line-height: 0.9;
    margin-bottom: 0;
    transition: font-size 0.2s ease;
  }

  /* 1200, 992, 768, 576 */
@media (max-width: 1200px) {
  .banner-text h1 {
    font-size: 2.4rem;
  }
}

@media (max-width: 1040px) {
  .banner-text h1 {
    font-size: 1.8rem;
  }
}
@media (max-width: 992px) {
  .banner-text h1 {
    font-size: 1.6rem;
  }
}
@media (max-width: 768px) {
  .banner-text h1 {
    font-size: 1.4rem;
  }
}

@media (max-width: 576px) {
  .banner-text h1 {
    font-size: 1.2rem;
  }
}
</style>