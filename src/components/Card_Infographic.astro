---
import { type CollectionEntry } from "astro:content";
import base_url from "../lib/base_url";

type Props = {
  infographic: CollectionEntry<"infographics">;
};

const { infographic } = Astro.props;
const { title, catagory } = infographic.data;

const preview = infographic.body.slice(0, 400); // Adjust the number of characters as needed
---

<style>
  time {
    font-size: small;
  }
  .btn {
    background-color: #09638c;
  }
  .btn:hover {
    background-color: #009ad6;
  }
  h2 {
    text-wrap: balance
  }
  p {
    display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* Number of lines to show */
  overflow: hidden;
  }
</style>
<li>
  <a href={base_url(`/news-info/infographics/${infographic.slug}`)}>
    {title}
  </a>
</li>
