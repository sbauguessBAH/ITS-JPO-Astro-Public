---
import type { ImageMetadata } from 'astro';
import defaultBannerImage from "@/src/assets/images/banners/Default_Banner.png";

interface Props {
  image?: ImageMetadata;
}

const { image } = Astro.props;
---
<div class="banner-container">
  <img 
    src={image?.src ?? defaultBannerImage.src} 
    alt="Banner Image" 
    class="banner-image"
  />
  <div class="banner-text-container">
    <div class="banner-text container-xl">
      <slot/>
    </div>
  </div>
</div>

<style>
  .banner-container {
    position: relative;
    max-height: 10rem;
    min-height: 4rem;
    width: 100%;
    overflow: hidden;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    min-height: 4rem;
    object-fit: cover;
    object-position: center center;
  }

  .banner-text-container {
    position: absolute;
    text-wrap: pretty;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    height: 100%;
    box-shadow: inset 0 10px 10px -10px rgba(0,0,0,0.2),inset 0 -10px 10px -10px rgba(0,0,0,0.2);
    -moz-box-shadow: inset 0 10px 10px -10px rgba(0,0,0,0.2),inset 0 -10px 10px -10px rgba(0,0,0,0.2);
    -webkit-box-shadow: inset 0 10px 10px -10px rgba(0,0,0,0.2),inset 0 -10px 10px -10px rgba(0,0,0,0.2);
  }

  .banner-text {
    margin: 0 auto;
    padding: 0 1rem;
  }

  .banner-text {
    font-size: 3rem;
    color: white;
    font-weight:bold;
    line-height: 0.9;
    margin-bottom: 0;
    text-transform:uppercase;
    transition: font-size 0.2s ease;
    text-wrap: pretty;
  }

  /* 1200, 992, 768, 576 */
@media (max-width: 1200px) {
  .banner-text {
    font-size: 2.4rem;
  }
}

@media (max-width: 1040px) {
  .banner-text {
    font-size: 1.8rem;
  }
}
@media (max-width: 992px) {
  .banner-text {
    font-size: 1.6rem;
  }
}
@media (max-width: 768px) {
  .banner-text {
    font-size: 1.4rem;
  }
}

@media (max-width: 576px) {
  .banner-text {
    font-size: 1.2rem;
  }
}
</style>