---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import defaultBannerImage from "@/src/assets/images/banners/Default_Banner.png";

interface Props {
  breadcrumbs: string[]
  hasOverlay?: boolean
  image?: ImageMetadata;
}

const { 
  breadcrumbs, 
  hasOverlay,
  image = defaultBannerImage
} = Astro.props;
---

<!-- Banner Styles -->
<style>
  .banner-wrapper {
    position: relative;
    height: 10rem;
    width: 100%;
    overflow: hidden;
  }

  .banner-image {
    width: 100%;
    height: 100%;
    height: 10rem;
    object-fit: cover;
    object-position: center right;
  }

  .banner-container {
    position: absolute;
    text-wrap: pretty;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    height: 100%;
    box-shadow: inset 0 10px 10px -10px rgba(0,0,0,0.2),inset 0 -10px 10px -10px rgba(0,0,0,0.2);
    -moz-box-shadow: inset 0 10px 10px -10px rgba(0,0,0,0.2),inset 0 -10px 10px -10px rgba(0,0,0,0.2);
    -webkit-box-shadow: inset 0 10px 10px -10px rgba(0,0,0,0.2),inset 0 -10px 10px -10px rgba(0,0,0,0.2);
  }

  .banner-title {
    font-size: 2rem;
    color: white;
    font-weight:bold;
    line-height: 0.9;
    margin: 0;
    padding: 0;
    text-transform:uppercase;
    transition: font-size var(--transition-duration-sm) ease;
    text-wrap: pretty;
  }

  .banner-description {
    color: white;
    margin: 0;
    padding: 0;
    font-size: 1.2rem;
    max-width: var(--container-md);
    display: none;
  }

  .banner-overlay {
    background: rgba(var(--color-brand-secondary), 0.8);
  }

  @media (min-width: 768px) {
    .banner-title {
      margin-bottom: 1rem;
      font-size: 3rem;
    }
    .banner-description {
      display: block;
    }
    .banner-wrapper {
      height: 15rem;
    }
    .banner-image {
      height: 15rem;
    }
  }

  @media (min-width: 992px) {
    .banner-overlay {
      background: none;
      background-image: linear-gradient(
        to right, 
        rgba(var(--color-brand-secondary), 1), 
        rgba(var(--color-brand-secondary), 0)
      );
    }
  }
</style>

<style>
  .breadcrumb-item {
    color: white;
  }
  .breadcrumb-item::before {
    color: white;
  }
</style>

<div class="banner-wrapper">
  <Image 
    src={image} 
    alt="Banner Image" 
    class="banner-image"
  />
  <div class:list={["banner-container", { "banner-overlay": hasOverlay }]}>
    <div class="container-xl">
      <div>
        <ol class="breadcrumb">
          {breadcrumbs.map(breadcrumb => (
            <li class="breadcrumb-item">
              {breadcrumb}
            </li>
          ))}
        </ol>
      </div>
      <div class="banner-title">
        <slot name="title" title="title"/>
      </div>
      <p class="banner-description">
        <slot name="description" title="description"/>
      </p>
    </div>
  </div>
</div>