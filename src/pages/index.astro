---
import Default from "../layouts/Default.astro";
import base_url from "../lib/base_url";
import { Image } from 'astro:assets';
import { getImage } from 'astro:assets';
import HeroBG from '../assets/images/HeroBG.jpeg';
import spotlight1 from '../assets/images/Spotlight1.png';
import spotlight2 from '../assets/images/Spotlight2.png';
import spotlight3 from '../assets/images/Spotlight3.png';
import spotlight4 from '../assets/images/Spotlight4.png';
import spotlight5 from '../assets/images/Spotlight5.png';
import spotlight6 from '../assets/images/Spotlight6.png';
import spotlight7 from '../assets/images/Spotlight7.png';
import spotlight8 from '../assets/images/Spotlight8.png';
import spotlight9 from '../assets/images/Spotlight9.png';
import spotlight10 from '../assets/images/Spotlight10.png';
import BaseLayout from "../layouts/BaseLayout.astro";

const optimizedBG = await getImage({ src: HeroBG });

---
<style>
    .hero-container {
        background-position: center; 
        background-size: cover;
        padding: 60px 35% 150px 60px;
        }
        
        @media only screen and (max-width: 600px) {
            .hero-container {
                padding: 24px;
  }
  
}
.HotTopicBlock img {
    width: 100%; 
    height:auto;
  }
</style>
<BaseLayout title="ITS JPO">
  <div class="container-fluid bodyWrap">
    <div class="hero-container" style={`background-image: url(${optimizedBG.src});`}>
  <div style="background-color: rgba(7, 46, 85, 0.85)">
    <div class="d-flex align-items-center p-3">
      <div class="text-white">
        <h2 class="mb-3">Intelligent Transportation Systems Joint Program Office</h1>
        <p class="mb-3 text-white">The Intelligent Transportation Systems Joint Program Office (ITS JPO) seeks to transform the way society moves. Explore our website for information on research and deployments that advance the use of ITS to move people and goods more safely and efficiently.
        </p>
        <a class="btn btn-outline-light btn-lg text-dark m-0" href="#" role="button">LEARN MORE ABOUT THE ITS JPO
        </a>
      </div>
    </div>
  </div>
</div>


    <div class="container HomepageContainter">
      <div class="row">
        <div class="col-12">
          <div class="TitleWrapper">
            <div class="TitleHeader">
              <h2>SPOTLIGHT ON ITS DEPLOYMENT ACTIVITIES</h2>
            </div>

            <div class="TitleBar"></div>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3">
          <a href="/research/emerging-tech/">
            <div class="HotTopicBlock">
              <div class="HotTopicTitleBanner">Interoperable Connectivity (V2X)</div>
              <Image src={spotlight1} alt="Interoperable Connectivity (V2X)"/>
            </div>
          </a>
        </div>
        <div class="col-lg-3">
          <a href="https://www.its.dot.gov/scrc/index.html" target="_blank">
            <div class="HotTopicBlock">
              <div class="HotTopicTitleBanner">
                <span class="externalLink_White">Smart Community Resource Center</span>
              </div>
              <Image src={spotlight2} alt="Smart Community Resource Center"/>

            </div>
          </a>
        </div>

        <div class="col-lg-3">
          <a href="https://its.dot.gov/isc/" target="_blank">
