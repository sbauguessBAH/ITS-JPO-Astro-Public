---
import { Image } from "astro:assets";
import PageLayout from "@/src/layouts/PageLayout.astro";
import base_url from "@/src/lib/base_url";

const keywords = [
  "ITS World Congress",
  "Media Kit",
  "2025",
  "Intelligent Transportation",
  "News Resources",
];

const description =
  "2025 ITS World Congress media kit with resources, images, and information for reporters and media professionals.";
---

<PageLayout
  title="2025 ITS World Congress Media Kit"
  keywords={keywords}
  description={description}
>
  <Fragment slot="banner"> Newsroom </Fragment>

  <main class="container mt-5">
    <h1 class="text-primary border-bottom border-2 border-primary pb-2 mb-4">
      Media Kit: ITS JPO at the 2025 ITS World Congress
    </h1>

    <h2 class="mb-3">Media Contacts</h2>
    <div class="row justify-content-center">
      <div class="col-md-5 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex align-items-center">
            <img
              src="https://via.placeholder.com/100"
              alt="Brian Cronin"
              class="rounded-circle me-4"
              style="width:100px;height:100px;object-fit:cover;"
            />
            <div>
              <h5 class="card-title mb-1">Brian Cronin</h5>
              <h6 class="card-subtitle mb-2 text-muted">Director</h6>
              <div class="mb-1">U.S Department of Transportation</div>
              <div class="mb-1">
                Intelligent Transportation Systems Joint Program Office
              </div>
              <a href="mailto:Brian.Cronin@dot.gov" class="card-link"
                ><i class="fas fa-envelope me-1"></i>Brian.Cronin@dot.gov</a
              >
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-5 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex align-items-center">
            <img
              src="https://via.placeholder.com/100"
              alt="Norah Ocel"
              class="rounded-circle me-4"
              style="width:100px;height:100px;object-fit:cover;"
            />
            <div>
              <h5 class="card-title mb-1">Norah Ocel</h5>
              <h6 class="card-subtitle mb-2 text-muted">Program Manager</h6>
              <div class="mb-1">U.S Department of Transportation</div>
              <div class="mb-1">
                Intelligent Transportation Systems Joint Program Office
              </div>
              <a href="mailto:Norah.Ocel@dot.gov" class="card-link"
                ><i class="fas fa-envelope me-1"></i>Norah.Ocel@dot.gov</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <hr class="my-5" />

    <h3 class="mb-4">
      ITS JPO Fact Sheets and Documents Distributed at 2025 ITS World Congress
    </h3>

    <div class="row">
      <div class="col-md-6">
        <ul>
          <li class="mb-2"><a href="#">ITS JPO Overview Postcard</a></li>
          <li class="mb-2"><a href="#">ITS4US Postcard</a></li>
          <li class="mb-2"><a href="#">ASC Overview Rack Card</a></li>
          <li class="mb-2">
            <a href="#">ITS V2X Interoperability Testing Info Rack Card</a>
          </li>
          <li class="mb-2"><a href="#">TRUST V2X Factsheet</a></li>
          <li class="mb-2"><a href="#">UDOT V2X Factsheet</a></li>
          <li class="mb-2"><a href="#">MCDOT V2X Factsheet</a></li>
          <li class="mb-2"><a href="#">DEP Factsheet</a></li>
          <li class="mb-2"><a href="#">ITS Datahub Factsheet</a></li>
        </ul>
      </div>
      <div class="col-md-6">
        <ul>
          <li class="mb-2"><a href="#">ITS Codehub Factsheet</a></li>
          <li class="mb-2"><a href="#">UW TDEI Rack Card</a></li>
          <li class="mb-2"><a href="#">HIRTA Rack Card</a></li>
          <li class="mb-2"><a href="#">GDOT Rack Card</a></li>
          <li class="mb-2"><a href="#">NFTA Rack Card</a></li>
          <li class="mb-2"><a href="#">Datahub and Codehub Postcard</a></li>
          <li class="mb-2"><a href="#">PCB Overview Postcard</a></li>
          <li class="mb-2"><a href="#">V2X Deployment Map Flyer</a></li>
        </ul>
      </div>
    </div>
  </main>

  {/* ...existing code for other sections... */}
</PageLayout>
