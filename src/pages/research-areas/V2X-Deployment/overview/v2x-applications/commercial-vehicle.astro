---
import banner from "@/src/assets/images/banners/V2X_Banner.png";
import PageLayout from "@/src/layouts/PageLayout.astro";

const keywords = [
  "V2X commercial vehicles",
  "V2I use cases",
  "wireless inspection",
  "roadside sensors",
  "hours of service data",
  "carrier compliance",
  "truck parking information",
  "parking availability",
  "route planning",
  "loading and unloading scheduling",
  "Smart Roadside Initiative",
  "FHWA-JPO reports",
];

const description =
  "Commercial vehicle V2X use cases covering wireless inspection via roadside sensors transmitting hours of service and inspection data, and truck parking information with loading/unloading scheduling to support route planning, with references to Smart Roadside Initiative FHWA-JPO reports.";
---

<PageLayout title="V2X Deployment" bannerImage={banner} keywords={keywords} description={description}>
  <Fragment slot="banner">Vehicle-to-Everything (V2X)</Fragment>
      <main>
        <h2 class="sideways blue">Commercial Vehicle Use Cases</h2>

        <div class="mt-3">
          <table class="table table-bordered table-striped align-middle">
            <thead class="table-light">
              <tr>
                <th scope="col" style="width: 25%">Use Case</th>
                <th scope="col" style="width: 55%">Description</th>
                <th scope="col" style="width: 20%">Type</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="table-info"><strong>Commercial Vehicle Wireless Inspection</strong></td>
                <td>This use case uses roadside sensors to transmit inspection information including hours of service and sensor data directly from trucks to carriers and government agencies.</td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Truck Parking and Other Information</strong></td>
                <td>This use case provides information on location and supply of parking, travel conditions, and loading/unloading scheduling to allow commercial drivers to make advanced route planning decisions.</td>
                <td>V2I Use Case</td>
              </tr>
            </tbody>
          </table>
        </div>

        <section class="mt-4">
          <h3>Supporting Documentation</h3>
          <ul>
            <li><a href="https://rosap.ntl.bts.gov/view/dot/3518" target="_blank" rel="noopener noreferrer">Smart Roadside Initiative, Concept of Operations, May 2012, FHWA-JPO-14-158</a></li>
            <li><a href="https://rosap.ntl.bts.gov/view/dot/3531" target="_blank" rel="noopener noreferrer">Smart Roadside Initiative Gap Analysis, Trucking Technology Utilization, April 2014, FHWA-JPO-14-131</a></li>
            <li><a href="https://rosap.ntl.bts.gov/view/dot/3532" target="_blank" rel="noopener noreferrer">Smart Roadside Initiative Gap Analysis, Trucking Technology Literature Review, April 2014, FHWA-JPO-14-132</a></li>
            <li><a href="https://rosap.ntl.bts.gov/view/dot/3533" target="_blank" rel="noopener noreferrer">Smart Roadside Initiative Gap Analysis, Trends in Trucking Technology Utilization, Webinar Summary, April 2014, FHWA-JPO-14-133</a></li>
            <li><a href="https://rosap.ntl.bts.gov/view/dot/3528" target="_blank" rel="noopener noreferrer">Integrating Smart Roadside Initiative into the V2I Component of the Connected Vehicle Program, Task 3.2, January 2015, FHWA-JPO-14-188</a></li>
            <li><a href="https://rosap.ntl.bts.gov/view/dot/3529" target="_blank" rel="noopener noreferrer">Smart Roadside Initiative Gap Analysis, Target Functionality and Gap Analysis, February 2015, FHWA-JPO-14-189</a></li>
          </ul>
        </section>
      </main>
</PageLayout>

<style>
  .application-category {
    padding: 1rem;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    background: #f8f9fa;
  }

  .application-list {
    list-style-type: none;
    padding-left: 0;
    margin-bottom: 0;
  }

  .application-list li {
    padding: 0.5rem 0;
    font-weight: 600;
    border-bottom: 1px solid #e0e0e0;
  }

  .application-list li:last-child {
    border-bottom: none;
  }
</style>
