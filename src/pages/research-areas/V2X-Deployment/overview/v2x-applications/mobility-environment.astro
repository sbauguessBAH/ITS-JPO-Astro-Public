---
import banner from "@/src/assets/images/banners/V2X_Banner.png";
import PageLayout from "@/src/layouts/PageLayout.astro";

const keywords = [
  "V2X mobility",
  "V2X environment",
  "signal priority",
  "traffic signal optimal speed advisory",
  "intelligent traffic signal system",
  "I-SIG",
  "pedestrian signal smartphone",
  "speed harmonization",
  "queue warning",
  "cooperative adaptive cruise control",
  "vehicle platooning",
  "eco-driving",
  "eco-signal operations",
  "eco-lanes",
  "low emissions zones",
  "INFLO",
  "AERIS",
  "FRATIS",
  "IDTO",
  "R.E.S.C.U.M.E.",
];

const description =
  "Mobility and environmental V2X use cases including signal priority and optimal speed advisory, intelligent traffic signal systems, accessible pedestrian signals via smartphone, speed harmonization and queue warning, cooperative adaptive cruise control and platooning, plus eco-driving, eco-signal operations, eco-lanes, and low emissions zone concepts referenced in USDOT programs like INFLO, AERIS, FRATIS, IDTO, and R.E.S.C.U.M.E.";
---

<PageLayout title="V2X Deployment" bannerImage={banner} keywords={keywords} description={description}>
  <Fragment slot="banner">Vehicle-to-Everything (V2X)</Fragment>
      <main>
        <h2 class="sideways blue">Mobility and Environmental Use Cases</h2>

        <div class="mt-3">
          <table class="table table-bordered table-striped align-middle">
            <thead class="table-light">
              <tr>
                <th scope="col" style="width: 25%">Use Case</th>
                <th scope="col" style="width: 55%">Description</th>
                <th scope="col" style="width: 20%">Type</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="table-info"><strong>Traffic Signal Optimal Speed Advisory (or Control)</strong></td>
                <td>This use case broadcasts the current state of signal phasing (red, yellow, or green) and time remaining in that phase at signalized intersections. These data are used by vehicles to support eco-friendly speed trajectories as vehicles approach a signalized intersection. This use case may also be combined with Cooperative Adaptive Cruise Control (CACC).  </td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Intelligent Traffic Signal System (I-SIG)</strong></td>
                <td>This use case includes an overarching system optimization application accommodating signal priority, preemption, and pedestrian movements.</td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Signal Priority</strong>
                  <ul class="mb-0">
                    <li>Transit</li>
                    <li>Freight</li>
                    <li>Snowplow</li>
                    <li>Platooning Priority</li>
                  </ul>
                </td>
                <td>This use case provides extra green time at signalized intersections to vehicles, such as transit vehicles, snowplows, or freight vehicles, helping the vehicles avoid a stop at a red light. This additional time can help a bus arrive at stops on time, reduce snowplow delays, or reduce truck idling for freight vehicles along an arterial corridor near a freight facility</td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Mobile Accessible Pedestrian Signal System (PED-SIG)</strong></td>
                <td>This use case allows for an automated call from the smartphone of a visually impaired pedestrian to the traffic signal, as well as audio cues to safely navigate the crosswalk.</td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Speed Harmonization</strong></td>
                <td>This use case recommends target speeds to drivers in response to congestion, incidents, and road conditions to maximize throughput and reduce crashes.  </td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Queue Warning</strong></td>
                <td>This use case provides the driver timely warnings of existing and impending queues.  </td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Cooperative Adaptive Cruise Control (CACC) / Vehicle Platooning</strong></td>
                <td>This use case dynamically adjusts and coordinates cruise control speeds among platooning vehicles to improve traffic flow stability and increase throughput.</td>
                <td>V2V Use Case</td>
              </tr>
            </tbody>
          </table>
        </div>

