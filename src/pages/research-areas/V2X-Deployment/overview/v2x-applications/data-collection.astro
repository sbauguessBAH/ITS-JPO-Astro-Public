---
import banner from "@/src/assets/images/banners/V2X_Banner.png";
import PageLayout from "@/src/layouts/PageLayout.astro";

const keywords = [
  "V2X",
  "Vehicle-to-Everything",
  "V2X Deployment",
  "interoperable connectivity",
  "safety",
  "goods movement",
  "public investment",
  "private investment",
];

const description =
  "The V2X Deployment program accelerates the adoption and deployment of interoperable connectivity nationwide, enhancing safety and mobility.";
---

<PageLayout title="V2X Deployment" bannerImage={banner} keywords={keywords} description={description}>
  <Fragment slot="banner">Vehicle-to-Everything (V2X)</Fragment>
      <main>
        <h2 class="sideways blue">Data Collection</h2>

        <div class="mt-3">
          <table class="table table-bordered table-striped align-middle">
            <thead class="table-light">
              <tr>
                <th scope="col" style="width: 25%">Use Case</th>
                <th scope="col" style="width: 55%">Description</th>
                <th scope="col" style="width: 20%">Type</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="table-info"><strong>Road Weather Data Collection</strong></td>
                <td>This use case allows vehicles to collect road weather data and send it back to the Center using vehicle-to-infrastructure communications.</td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Probe-enabled Traffic Monitoring</strong></td>
                <td>This use case allows agencies to collect probe data (vehicle speed, etc.) from vehicles and send it back to the Center using vehicle-to-infrastructure communications.</td>
                <td>V2I Use Case</td>
              </tr>
              <tr>
                <td class="table-info"><strong>Probe-based Pavement Maintenance</strong></td>
                <td>This use case allows vehicles to collect pavement condition data (e.g., potholes or other pavement conditions) and send it back to the Center using vehicle-to-infrastructure communications.</td>
                <td>V2I Use Case</td>
              </tr>
            </tbody>
          </table>
        </div>

        <section class="mt-4">
          <h3>Supporting Documentation</h3>
          <ul>
            <li><a href="https://rosap.ntl.bts.gov/view/dot/3440" target="_blank" rel="noopener noreferrer">National Connected Vehicle Field Infrastructure Footprint Analysis Final Report</a></li>
          </ul>
        </section>
      </main>
</PageLayout>

<style>
  .application-category {
    padding: 1rem;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    background: #f8f9fa;
  }

  .application-list {
    list-style-type: none;
    padding-left: 0;
    margin-bottom: 0;
  }

  .application-list li {
    padding: 0.5rem 0;
    font-weight: 600;
    border-bottom: 1px solid #e0e0e0;
  }

  .application-list li:last-child {
    border-bottom: none;
  }
</style>
