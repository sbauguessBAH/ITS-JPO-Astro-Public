---
import BaseLayout from "@/src/layouts/BaseLayout.astro";
import type { ImageMetadata } from 'astro';
import banner from "@/src/assets/images/banners/Automation_Banner.png";
import { Image } from "astro:assets";
import Banner from "./_banner.astro";
import Menu from "./_menu.astro";

interface Props {
	title: string;
  currentBreadcrumb?: string;
  description?: string;
  keywords?: string[] | string;
}

const { 
  title, 
  currentBreadcrumb, 
  description, 
  keywords 
} = Astro.props;
---
<style is:global>
  h2.program-title {
    color: #055581;
    font-weight: 800;
    font-size: 2rem;
    margin: 0;
    margin-bottom: 0.5rem;
    padding: 0;
  }
  h3.program-title {
    color: #055581;
    font-weight: 700;
    font-size: 1.6rem;
    text-transform: none;
    margin: 0;
    margin-bottom: 0.5rem;
    padding: 0;
  }
  h4.program-title {
    color: #055581;
    font-weight: 600;
    font-size: 1.2rem;
    margin: 0;
    padding: 0;
  }
  p.program-text {
    font-size: 1.1rem;
    line-height: 1.5;
    margin: 0;
    padding: 0;
    margin-bottom: 1rem;
  }
  section {
    padding: 0;
    margin: 0;
  }
  .max-w-sm {
    max-width: 576px;
  }
  .max-w-md {
    max-width: 768px;
  }
  .max-w-lg {
    max-width: 992px;
  }
  .max-w-xl {
    max-width: 1200px;
  }
  .program-container {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    padding: 2rem 1rem 8rem 1rem;
  }
  .gap-md {
    gap: 2rem;
  }
  .gap-lg {
    gap: 4rem;
  }
  @media (min-width: 1200px) {
    .program-container {
      padding: 2rem 4rem 8rem 4rem;
    }
  }
</style>
<BaseLayout 
  title={title} 
  keywords={keywords} 
  description={description}
>
  <Banner/>
  <Menu/>
  <slot/>
</BaseLayout>