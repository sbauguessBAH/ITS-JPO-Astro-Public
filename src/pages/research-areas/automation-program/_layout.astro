---
import banner from "@/src/assets/images/banners/Automation_Banner.png";
import type { ChildNavigationItem } from "@/src/types";
import PageLayout from "@/src/layouts/PageLayout.astro";
import "@/src/styles/programs.css";


const keywords = [
  "Automation Program",
  "Transportation Research",
  "Automated Driving Systems",
  "Advanced Driver Assistance Systems",
  "Cooperative Driving Assistance",
  "ADAS",
];

const description = `
  The ITS JPO Automation Program focuses on the safe deployment 
  of automated driving systems and advanced driver assistance systems 
  through collaboration and research.
`
---
<PageLayout
  title="Automation Program"
  keywords={keywords}
  description={description}
     bannerImage={banner}

>
<Fragment slot="banner"> Automation Program </Fragment>
  <slot/>
</PageLayout>