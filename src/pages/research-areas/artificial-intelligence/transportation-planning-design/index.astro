                  <div class="project-card">
                    <div class="project-logo-placeholder">
                      <Image src={stateOfPlaceLogo} alt="State of Place logo" class="project-logo" />
                    </div>
                    <h4>AI for Comprehensive, Efficient, & Safe Streets (ACES)</h4>
                    <p class="company-name">State of Place</p>
                    <a href={base_url("/research-areas/artificial-intelligence/transportation-planning-design/projects/aces-comprehensive-streets")} class="btn btn-sm btn-primary">Learn More</a>
                  </div>
                </div>
              </div>
            </div>

            <div class="carousel-controls">
              <label for="slide2" class="carousel-arrow carousel-arrow-next" data-slide="1">›</label>
              <label for="slide3" class="carousel-arrow carousel-arrow-next" data-slide="2">›</label>
