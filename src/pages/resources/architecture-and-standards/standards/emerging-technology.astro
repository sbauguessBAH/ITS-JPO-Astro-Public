---
import { getCollection } from "astro:content";
import StandardsLayout from "./_standards-layout.astro";

const standards = await getCollection("standardsList")
  .then(collection => collection.map(row => row.data).filter(row => row.category === "Emerging Technology"))
---
<style>
  .table th, .table td {
    text-align: left;
  }
</style>

<StandardsLayout>
  <h2 class="blue">Emerging Technology</h2>
  <p>
    Emerging Technology standards represent technologies that have yet to be demonstrated widely and are early in their lifecycle. These standards tend to focus on either experimental methods or research. 
  </p>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">SDO</th>
        <th scope="col">Name</th>
      </tr>
    </thead>
    <tbody>
      {standards.map(standard => (
        <tr>
          <th scope="row">
            {standard.sdo}
          </th>
          <td>
            <a 
              href={standard.link} 
              rel="noopener noreferrer" 
              target="_blank" 
              class="link"
            >
              {standard.name}
            </a>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</StandardsLayout>