---
import PageLayout from "@/src/layouts/PageLayout.astro";
import banner from "@/src/assets/images/banners/ASC_Banner.jpg";
import SidebarLayout from "@/src/layouts/SidebarLayout.astro";

const keywords = [
  "ARC-IT",
  "Architecture Reference for Cooperative and Intelligent Transportation",
  "standards development organizations",
  "SDOs",
  "interoperability",
  "transportation systems",
  "cybersecurity",
  "protocols",
  "standards",
];
---
<style is:global>
  .reset-link {
    text-decoration: none;
    font: inherit;
    color: inherit;
    outline: none;
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    display: inline;
    cursor: pointer;
  }
  .reset-link:hover {
    font-weight: normal;
  }
  .link:hover {
    font-weight: normal;
  }
</style>
<PageLayout title="ITS Standards" bannerImage={banner} keywords={keywords}>
  <Fragment slot="banner">ITS Standards</Fragment>
  <SidebarLayout path="/resources/">
    <slot />
  </SidebarLayout>
</PageLayout>
