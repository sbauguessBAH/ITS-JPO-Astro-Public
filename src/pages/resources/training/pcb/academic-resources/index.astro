---
import Card from "@/src/components/pcb/Card.astro";
import PcbLayout from "../_pcb-layout.astro"

import { getCollection } from "astro:content";
const entries = await getCollection("pcb", (entry) =>
  entry.id.startsWith("academic-resources")
);
---

<PcbLayout title="Academic Resources">
  <h2>Academic Resources</h2>
  <p>
    Connect with tools and materials to support students and faculty in preparing for careers in ITS.
  </p>
  <div class="row gy-4 mb-4 justify-content-start">
    {entries.toSorted((one, two) => 
      one.data.order - two.data.order
    ).map(entry => (
      <div class="col-sm-6">
        <Card
          image={entry.data.image}
          title={entry.data.title}
          description={entry.data.description}
          href={`/resources/training/pcb/academic-resources/${entry.slug.split("/")[1]}`}
        />
      </div>
    ))}
  </div>
</PcbLayout>