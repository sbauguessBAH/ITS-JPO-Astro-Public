---
import PageLayout from "@/src/layouts/PageLayout.astro";
import bannerImage from "@/src/assets/images/pcb/banner.png";
import bannerText from "@/src/assets/images/pcb/banner-text.png";
import SidebarLayout from "@/src/layouts/SidebarLayout.astro";
interface Props {
  title: string;
  currentBreadcrumb?: string;
}

const { title, currentBreadcrumb } = Astro.props;
---
<style is:global>
  section {
    padding: 0;
    margin: 0;
  }

  h2.pcb-title {
    color: #055581;
    font-size: 32px;
    font-weight: 700;
    letter-spacing: -0.025rem;
    padding: 0;
    margin: 0;
    padding-bottom: 0.4rem;
    border-bottom: 2px solid #10020215;
    margin-bottom: 0.8rem;
  }

  .pcb-header-container {
    border-bottom: 4px solid #055581;
    display: flex;
    padding-bottom: 4px;
    margin-bottom: 16px;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
  }
</style>
<PageLayout 
  title={`${title} | Professional Capacity Building (PCB)`} 
  bannerImage={bannerImage}
  currentBreadcrumb={currentBreadcrumb}
>
