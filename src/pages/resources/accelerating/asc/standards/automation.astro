---
import StandardsHeading from "@/src/components/standards/StandardsHeading.astro";
import AscLayout from "../_asc-layout.astro";
import { getEntry } from "astro:content";
import V2XStandardLink from "@/src/components/standards/V2XStandardLink.astro";
import { getEntries } from "astro:content";
import { getCollection } from "astro:content";

const standards = await getCollection("standardsList")
  .then(collection => collection.map(row => row.data).filter(row => row.category === "Automation"))
---
<style>
  .table th, .table td {
    text-align: left;
  }
</style>

<AscLayout title="ITS Standards" currentBreadcrumb="Automation">
  <StandardsHeading title="Automation"/>
  <div class="typography">
    <p>
      Automation standards focus on detailing the minimum requirements for developing, implementing, and deploying safe automated driving capabilities. 
    </p>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">SDO</th>
          <th scope="col">Name</th>
        </tr>
      </thead>
      <tbody>
        {standards.map(standard => (
          <tr>
            <th scope="row">
              {standard.sdo}
            </th>
            <td>
              <a href={standard.link} rel="noopener noreferrer" target="_blank">
                {standard.name}
              </a>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</AscLayout>