import salCowan from "@/src/assets/images/pcb/webinars/headshots/sal-cowan.jpg";
import vaishaliShah from "@/src/assets/images/pcb/webinars/headshots/vaishali-shah.png";
import johnParker from "@/src/assets/images/pcb/webinars/headshots/john-parker.png";
import HostCard from "./_host-card.astro";
import FilmIcon from "@/src/components/programs/icons/FilmIcon.astro";
